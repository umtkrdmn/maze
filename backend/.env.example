# 3D Maze Game - Backend Configuration
# Copy this file to .env and customize the values

# Database
DATABASE_URL=sqlite+aiosqlite:///./maze_game.db

# JWT Authentication
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Game Settings
MAZE_WIDTH=10
MAZE_HEIGHT=10
ROOM_PURCHASE_PRICE=10.0

# Reward System
SMALL_REWARD_SPAWN_CHANCE=0.3
BIG_REWARD_SPAWN_CHANCE=0.01
SMALL_REWARD_MIN=0.1
SMALL_REWARD_MAX=5.0
BIG_REWARD_MIN=50.0
BIG_REWARD_MAX=500.0
REWARD_MIN_DURATION=300
REWARD_MAX_DURATION=900

# Server
HOST=0.0.0.0
PORT=7000

# CORS (for development)
CORS_ORIGINS=http://localhost:8080,http://localhost:8081,http://127.0.0.1:8080

# Redis (optional - for production)
# REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO
